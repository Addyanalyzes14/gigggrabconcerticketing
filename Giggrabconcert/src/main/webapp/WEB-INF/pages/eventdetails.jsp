<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Concert Countdown</title>
     <link rel="stylesheet" type="text/css" 
          href="${pageContext.request.contextPath}/css/eventdetails.css">
</head>
<body>

<header class="top-bar">
    <div class="nav-links">
        <a href="#">Home</a>
        <a href="#">Choose Tickets</a>
        <a href="#">Payment & Checkout</a>
        <a href="#">My Bookings</a>
        <a href="#">Profile</a>
    </div>
</header>

<section class="hero-image">
    <!-- Banner image placeholder -->
</section>

<section class="countdown-heading">
    <h1>Countdown Your Next Favorite Concert</h1>
</section>

<section class="concert-list">
    <div class="concert-card">
        <div class="artist-img"><!-- Artist Image Placeholder --></div>
        <div class="artist-info">
            <h2>Kulshrestha Kamal</h2>
            <div class="buttons">
                <button class="rock">ROCK</button>
                <button class="pop">POP</button>
            </div>
            <p>Rs. 8000 / Ticket</p>
        </div>
        <div class="right-banner">
            <!-- Promotional Banner Image Placeholder -->
            <p>GRAB YOUR TICKETS NOW !!!</p>
        </div>
    </div>

    <div class="concert-card">
        <div class="artist-img"><!-- Artist Image Placeholder --></div>
        <div class="artist-info">
            <h2>Arijit Singh</h2>
            <div class="buttons">
                <button class="romantic">ROMANTIC</button>
                <button class="indian">INDIAN</button>
            </div>
            <p>Rs. 7000 / Ticket</p>
        </div>
    </div>

    <div class="concert-card">
        <div class="artist-img"><!-- Artist Image Placeholder --></div>
        <div class="artist-info">
            <h2>Shreya Ghosal</h2>
            <div class="buttons">
                <button class="melody">MELODY</button>
                <button class="classical">CLASSICAL</button>
            </div>
            <p>Rs. 6000 / Ticket</p>
        </div>
    </div>

    <div class="concert-card">
        <div class="artist-img"><!-- Artist Image Placeholder --></div>
        <div class="artist-info">
            <h2>Sunidhi Chauhan</h2>
            <div class="buttons">
                <button class="energy">ENERGY</button>
                <button class="pop">POP</button>
            </div>
            <p>Rs. 5000 / Ticket</p>
        </div>
    </div>

    <div class="related-artists">
        <h3>RELATED ARTISTS</h3>
        <ul>
            <li>Jason Capriolet</li>
            <li>Elizabeth Greensoul</li>
            <li>Cameron Clarks</li>
            <li>Michelle Cummings</li>
        </ul>
    </div>
</section>

<section class="concert-show">
    <!-- Full concert arena image placeholder -->
</section>

<footer>
    <div class="footer-top">
        <div class="faq">FAQs</div>
        <p>Got questions about tickets, entry, or event policies? Browse our FAQs for instant answers!</p>
    </div>
    <div class="footer-content">
        <div class="footer-brand">Gigg-Grab</div>
        <div class="contact">
            <h4>CONTACT US</h4>
            <p>gigg@ticketing.com<br>+977 9876543210</p>
        </div>
        <div class="subscribe">
            <h4>SUBSCRIBE</h4>
            <input type="email" placeholder="Enter your email">
            <button>Subscribe</button>
        </div>
    </div>
    <div class="footer-bottom">
        <p>2025 TicketBooking. All rights reserved.</p>
    </div>
</footer>

</body>
</html>
    